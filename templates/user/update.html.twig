{% extends 'layout.html.twig' %}
{% block title %}Modifier votre profil{% endblock %}
{% block main %}

    <h1>Modifier mon profil</h1>
    <div>
        {{ form_start(profilForm) }}

        <div class="group">
            <label for="username">Pseudo :</label>
            {{ form_label(profilForm.username) }}
            {{ form_widget(profilForm.username) }}
        </div>

        <div class="group">
            <label for="prenom">Prénom :</label>
            {{ form_label(profilForm.prenom) }}
            {{ form_widget(profilForm.prenom) }}
        </div>

        <div class="group">
            <label for="nom">Nom :</label>
            {{ form_label(profilForm.nom) }}
            {{ form_widget(profilForm.nom) }}
        </div>

        <div class="group">
            <label for="telephone">Téléphone :</label>
            {{ form_label(profilForm.telephone) }}
            {{ form_widget(profilForm.telephone) }}
        </div>

        <div class="group">
            <label for="prenom">Email :</label>
            {{ form_label(profilForm.email) }}
            {{ form_widget(profilForm.email) }}
        </div>

        <div class="group">
            <label for="password">Mot de passe :</label>
            {{ form_label(profilForm.password) }}
            {{ form_widget(profilForm.password) }}
        </div>

        <div class="group">
            <label for="site">Site :</label>
            {{ form_label(profilForm.site) }}
            {{ form_widget(profilForm.site) }}
        </div>

        <button type="submit">Enregistrer</button>
        {{ form_end(profilForm) }}
    </div>

{% endblock %}