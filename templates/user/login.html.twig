    <link href="https://fonts.googleapis.com/css?family=Kalam:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <title>{% block title %}Sortir !{% endblock %}</title>
</head>
<body class="container-fluid loginPage">
<div class="contentLogin col-12 col-md-6">
    <h1>Sortir.com</h1>
    <hr>
    <h2>Connectez-vous !</h2>
    <div class="formLogin">
        {% if erreur %}
            <div class="flash-error">{{ erreur.message }}</div>
        {% endif %}
        <form method="post">

            <div class="form-group">
                <label for="username">Identifiant :</label>
                <input class="form-control" type="text" name="_username" id="username">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input class="form-control" type="password" name="_password" id="password">
            </div>
            <label>
                <input type="checkbox" name="_remember_me" checked>
                Se souvenir de moi
            </label>
            <div>
                <button class="btn btn-primary" type="submit">Connexion</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>
