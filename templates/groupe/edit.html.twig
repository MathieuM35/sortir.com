{% extends 'layout.html.twig' %}

{% block title %}Modifier le groupe {{ groupe.nom }}{% endblock %}

{% block main %}
    <div class="text-center py-3 addSortie">
        <div class="container-fluid">
            <div class="row">
                <div class="mx-auto col-10 bg-white p-5 col-md-10">
                    <h1>Modifier votre groupe {{ groupe.nom }} </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid mainContent">
        <div class="container privateGroupPage">

            {{ include('groupe/_form.html.twig', {'button_label': 'Modifier'}) }}

            <a href="{{ path('groupe_index') }}">
                <button class="btn btn-outline-secondary btn-block">Retour aux groupes</button>
            </a>

            {{ include('groupe/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
