{% extends 'layout.html.twig' %}

{% block title %}Détails site {{ site.nom }}{% endblock %}

{% block main %}
    <div class="text-center py-3 addSortie">
        <div class="container-fluid">
            <div class="row">
                <div class="mx-auto col-10 bg-white p-5 col-md-10">
                    <h1>Détails du site {{ site.nom }} </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="container privateGroupPage">
        <table class="table table-striped">
            <thead>
            <th>Nom</th>
            <th class="d-none d-md-table-cell">Site</th>
            <th></th>
            </thead>
        </table>

        {# BOUTONS ACTIONS #}
        <a href="{{ path('site_edit', {'id': site.id}) }}">
            <button class="btn btn-primary btn-block">Modifier</button>
        </a>

        <a href="{{ path('site') }}">
            <button class="btn btn-outline-secondary btn-block">Retour aux sites</button>
        </a>
        {{ include('site/_delete_form.html.twig') }}
    </div>
{% endblock %}
