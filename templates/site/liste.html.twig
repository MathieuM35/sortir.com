{% extends 'layout.html.twig' %}
{% block title %}Gestion des sites{% endblock %}

{% block main %}

    <div class="text-center py-3 addSortie">
        <div class="container-fluid">
            <div class="row">
                <div class="mx-auto col-10 bg-white p-5 col-md-10">
                    <h1>Gestion des sites</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid searchForm">
        <div class="container">
            <div>
                <h3>Filtrer les sites :</h3>
            </div>
            {{ form_start(rechercheSiteForm) }}

            {{ form_label(rechercheSiteForm.nomContient) }}
            <div class="row">
                <div class="col-8">
                    {{ form_widget(rechercheSiteForm.nomContient) }}
                </div>
                <div class="col-4">
                    {{ form_widget(rechercheSiteForm.rechercher) }}
                </div>
            </div>
            <a href="{{ url('site') }}">{{ form_widget(rechercheSiteForm.voirTout) }}</a>

            {{ form_end(rechercheSiteForm) }}
        </div>
    </div>

    <div class="container searchResults">
        <div>
            <h2>Liste des sites :</h2>
        </div>
        <div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for site in sites %}
                    <tr>
                        <td>{{ site.id }}</td>
                        <td>{{ site.nom }}</td>
                        <td>
                            <a class="actions" href="{{ path('site_edit', {'id': site.id}) }}"><i class="far fa-edit"></i></a>
                            {{ include('site/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>

    <div class="container">
        <div>
            <a href="{{ path('site_add') }}">
                <button class="btn btn-primary btn-lg btn-block">Ajouter un site</button>
            </a>
        </div>
    </div>
{% endblock %}